@page "/courseupsert/"
@page "/courseupsert/{id:int}"
<h3>Opret bane</h3>
@rendermode @(new InteractiveAutoRenderMode(false))


<RadzenTemplateForm Data="@Model" Submit="@((CourseModel args) => { Submit(args); })">
    <RadzenRow Gap="2rem" class="rz-p-0 rz-p-lg-4">
        <RadzenColumn Size="12">
            <RadzenStack>
            <RadzenFieldset Text="Bane">
                <RadzenStack  Gap="1rem">
                     <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="4">
                                <RadzenLabel Text="Navn" Component="CourseName" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="8">
                                <RadzenTextBox style="display: block" Name="CourseName" @bind-Value="@Model.CourseName"/>
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="4">
                                <RadzenLabel Text="Par" Component="Par" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="8">
                                <RadzenNumeric Min="60" Max="80" Style="width: 8rem;" Name="Hcp" @bind-Value=@Model.Par />
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="4">
                                <RadzenLabel Text="Slope" Component="Slope" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="8">
                                <RadzenNumeric Placeholder="0" Min="100" Max="150" Style="width: 8rem;" Name="Slope" @bind-Value=@Model.Slope />
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="4">
                                <RadzenLabel Text="CourseRating" Component="CourseRating" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="8">
                                <RadzenNumeric Placeholder="0" Min="60" Max="80" Style="width: 8rem;" Name="CourseRating" @bind-Value=@Model.CourseRating />
                        </RadzenColumn>
                    </RadzenRow>
                 </RadzenStack>
            </RadzenFieldset>
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" Gap="1rem" class="rz-mt-8 rz-mb-4">
        <RadzenButton ButtonType="ButtonType.Submit" Size="ButtonSize.Large" Icon="save" Text="Gem" />
        <RadzenButton ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Large" Icon="cancel" Text="Fortryd" Click="@Cancel" />
    </RadzenStack>
</RadzenTemplateForm>

